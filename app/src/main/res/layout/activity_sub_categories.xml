<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Activities.Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/SwipHome"
            android:layout_marginTop="@dimen/_170sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_Categroies"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:scrollbars="horizontal" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:background="@drawable/bc_home"
            />
        <ImageView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/logo_lgin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_15sdp"
            android:id="@+id/logo_login"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/logo_login"
            android:textColor="#fff"
            android:layout_marginTop="@dimen/_25sdp"
            android:text="@string/findyourneed"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:id="@+id/find"
            />

        <RelativeLayout
            android:layout_width="@dimen/_210sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/search_border"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/Rela"
            android:layout_below="@+id/find"
            >

            <EditText
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_30sdp"
                android:hint="@string/searchsub"
                android:textColor="#CCCCCC"
                android:background="@android:color/transparent"
                android:paddingStart="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:textColorHint="#CCCCCC"
                android:maxLines="1"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/E_Search_sub"
                android:imeOptions="actionDone"
                android:inputType="text"
                />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_search"
                android:layout_marginStart="@dimen/_10sdp"
                android:id="@+id/img_search_sub"
                />


        </RelativeLayout>




    </RelativeLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>