<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#224488"
    tools:context=".Activities.Sent_Message">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:id="@+id/toolbar"
        android:background="#224488">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/logo_lgin"
                android:layout_centerInParent="true"
                android:id="@+id/logo_login"
                />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:id="@+id/Card"
        android:layout_marginTop="@dimen/_60sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:id="@+id/Rela_title"
            android:background="@drawable/bc_relative">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="#8d8d8d"
                android:id="@+id/Title"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:id="@+id/view"
            android:layout_below="@+id/Rela_title"
            android:background="#fff"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="#e4e4e4"
            android:id="@+id/Rela_Phone"
            android:layout_below="@+id/view">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="#8d8d8d"
                android:id="@+id/phone"
                />

        </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:id="@+id/view2"
                android:layout_below="@+id/Rela_Phone"
                android:background="#fff"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="#e4e4e4"
                android:id="@+id/Rela_phone"
                android:layout_below="@+id/view2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="#8d8d8d"
                    android:id="@+id/address"
                    />

            </RelativeLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/Rela_phone"
            android:textColor="#000"
            android:id="@+id/E_Messages"
            android:background="@android:color/transparent"
            android:hint="@string/msg"
            android:textColorHint="#000"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
            <Button
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/Card"
                android:drawableEnd="@drawable/ic_camera"
                android:paddingEnd="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bc_btnsend"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="@string/uploadimg"
                android:textAllCaps="false"
                android:id="@+id/Img_Cameras"
                />

            <Button
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/Img_Cameras"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bc_btnsend"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="@string/send"
                android:textAllCaps="false"
                android:layout_marginBottom="@dimen/_10sdp"
                android:id="@+id/Btn_Sent"
                />

            <ImageView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_below="@+id/Card"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:id="@+id/Img_ShowCamera"
                />

    <ProgressBar
        android:id="@+id/progressBarLogin"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>